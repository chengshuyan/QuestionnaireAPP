page{
  height:100%;
  width:100%
}
.top_image{
    display: table-column
}
.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 8rpx;
  margin-left: 68rpx;
  margin-bottom: 13rpx;
  margin-right: 72rpx;
  background-color: #fff;
}
.item-left{
    margin-top: 10rpx;
    display:table-cell;

}
.item-middle{
    flex: 1;
    margin-top: 10rpx;
    display:table-cell;

}
.item_right{
    display: block;
    margin-top: 10rpx;

}
.text{
  color: #000000;
  font-family:"幼圆";
  font-weight:bold;
  line-height: 10rpx;
  font-size: 28rpx;
}
.text_title{
  color: #000000;
  font-family:"幼圆";
  font-weight:bold;
  line-height: 10rpx;
  font-size: 36rpx;
}
.text_number{
  color: #f58403;
  font-family:"幼圆";
  font-weight:bold;
  line-height: 10rpx;
  font-size: 36rpx;
}
.image{
    width: 88rpx; 
    height: 88rpx;
    border-radius: 44rpx; 
    background-color: #eeeeee;
}
