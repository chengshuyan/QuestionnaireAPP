page{
  height:100%;
  width:100%
}
.top_image{
    display: table-column
}
.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 8rpx;
  margin-top:30rpx;
  margin-left: 10rpx;
  margin-bottom: 13rpx;
  margin-right: 10rpx;
  background-color: white;
}
.item-left{
    margin-top: 10rpx;
    display:table-cell;
}
.item-middle{
    flex: 1;
    margin-top: 10rpx;
    display:table-cell;

}
.item_right{
    display: block;
    margin-top: 10rpx;

}
.text{
  color: #000000;
  line-height: 10rpx;
  font-size: 28rpx;
}
.text_title{
  color: #000000;
  line-height: 10rpx;
  font-size: 36rpx;
}
.text_number{
  color: #f58403;
  font-weight:bold;
  line-height: 10rpx;
  font-size: 36rpx;
}
.image{
    width: 125rpx; 
    height: 100rpx;
    border-radius: 0rpx; 
    background-color: #eeeeee;
}
/* 直接设置swiper属性 */

.swiper {
  height: 400rpx;
}

.swiper_ad {
  height: 400rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.view-background{
  background-color: white;
  margin-top:0rpx;
}
.background{
  background-color: rgb(165, 205, 252);
}
.button-class
{
  margin-top:20rpx;
  margin-left:10rpx;
  margin-right:10rpx;
}

view.search {
    display: flex;
    flex-direction: row;
    height: 98rpx;
    background: rgb(165, 205, 252);
    align-items: center;
}

view.searchItem {
    display: flex;
    width: 100%;
    background: #fff;
    flex-direction: row;
    border-radius: 10rpx;
    margin-right: 20rpx;
    margin-left: 20rpx;
}

view.searchItem image {
    height: 42rpx;
    width: 42rpx;
    align-self: center;
    margin-left: 10rpx;
    margin-right: 20rpx;
}

view.searchItem input {
    flex: 1;
    font-size: 30rpx;
}
